<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorSubPrimary">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your comment"
        android:textColor="@color/colorWhite"
        android:padding="10dp"
        android:textSize="20sp"/>
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07"
        android:columnCount="3"
        android:padding="5dp"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user_shiro"
            android:layout_column="0"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/comment"
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:gravity="top"
            android:background="@drawable/border_comment"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            android:layout_column="2"
            android:layout_gravity="right"/>
    </GridLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.05"></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>